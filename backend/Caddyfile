:80 {
    # /xrpc/ への HTTP リクエストを Fastify (LabelerServer) に転送
    reverse_proxy /xrpc/* 127.0.0.1:8080 {
        transport http {
            versions h1
        }
    }

    # WebSocket サポート
    reverse_proxy /xrpc/com.atproto.label.subscribeLabels 127.0.0.1:8080 {
        transport http {
            versions h1
        }
    }
}